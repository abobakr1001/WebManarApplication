@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br />
<br />
<a asp-controller="Employee" asp-action="Create">add new Department</a>
<div class="row d-flex justify-content-center">
    <form class="row col-md-8 offset-1">
        <div class=" col-md-8 ">
            <input class="form-control" name="searchName" type="text" />
        </div>
        <div class=" col-md-4 ">
            <input class="btn btn-success" value="search" type="submit" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-borderless ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.Age)</th>
                <th>@Html.DisplayNameFor(d=>d.Salary)</th>
                <th>@Html.DisplayNameFor(d=>d.Address)</th>
                <th>@Html.DisplayNameFor(d=>d.Department)</th>
                <th>@Html.DisplayNameFor(d=>d.Email)</th>
                <th>@Html.DisplayNameFor(d=>d.PhoneNumber)</th>
                 <th>@Html.DisplayNameFor(d=>d.HireDate)</th>
                <th>@Html.DisplayNameFor(d=>d.IsActive)</th>
                
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Name</td>
                    <td>@department.Age</td>
                    <td>@Html.DisplayFor(d=>department.Salary)</td>
                    <td>@department.Address</td>
                    <td> @Html.DisplayFor(d=>department.Department.Name)</td>
                    <td>@Html.DisplayFor(d=>department.Email)</td>
                    <td>@department.PhoneNumber</td>
                    <td>@department.HireDate</td>
                     
                    <td>
                        @if (department.IsActive == true)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }else{
                            <i class="fa-solid fa-circle" style="color:red"></i>
                        }
                    </td>
                    <partial name="_ButtonsPartailView" model="@department.Id" />
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>there is no employee</h3>
    </div>
}
