@model EmployeeViewModel
<div asp-validation-summary="All"></div>
<div class="form-group">
    <label class="col-form-label" asp-for="Name">Name</label>
    <input class="form-control" asp-for="Name" readonly />
    <span asp-validation-for="Name"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary">Salary</label>
    <input class="form-control" asp-for="Salary" readonly />
    <span asp-validation-for="Salary"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age">Age</label>
    <input class="form-control" asp-for="Age" readonly />
    <span asp-validation-for="Age"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address">Address</label>
    <input class="form-control" asp-for="Address" readonly />
    <span asp-validation-for="Address"></span>
</div>
