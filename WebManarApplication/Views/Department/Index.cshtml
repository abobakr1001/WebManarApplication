
@model IEnumerable<Deaprtment>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br />
<br />

@if (TempData["Message"]is not null)
{
    <div class="alert alert-success">
        @TempData["Message"];
    </div>
    
}
<a asp-controller="Department" asp-action="Create">add new Department</a>
@if (Model.Count() > 0)  
{
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.Code)</th>
                <th>@Html.DisplayNameFor(d=>d.DateOfcreation)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                 <tr>
                <td>@department.Name</td>
                    <td>@department.Code</td>
                    <td>@department.DateOfcreation</td>
                    <partial name="_ButtonsPartailView" model="@department.Id" />
            </tr> 
            }
          
        </tbody>
    </table>
}else{
    <div class="mt-5 alert-warning">
        <h3>there is no department</h3>
    </div>
}
