@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="Register" method="post">
			<input class="text" asp-for="FName" type="text" name="FName" placeholder="FName" required="">
			<input class="text " asp-for="LName" type="text" name="LName" placeholder="LName" required="">
			<input class="email " asp-for="Email" type="email" name="email" placeholder="Email" required="">
			<input class="text" asp-for="Password" type="password" name="password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="ConfirmPassword" type="password" name="ConfirmPassword" placeholder="Confirm Password" required="">
					<div class="wthree-text">
						<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
							<span>I Agree To The Terms & Conditions</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNUP">
				</form>
				<p>Don't have an Account? <a asp-action="Login"> Login Now!</a></p>
			</div>
</div>

